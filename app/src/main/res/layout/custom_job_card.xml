<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/cat_back">

    <RelativeLayout
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:background="@android:color/white"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/icon_lay"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/card_job_customer_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:civ_border_color="@color/yellow"
                app:civ_border_width="1dp"
                android:src="@drawable/person_1" />

            <TextView
                android:id="@+id/card_job_customer_name"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salman"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="#333333"
                android:fontFamily="sans-serif"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_toLeftOf="@id/arrow_lay"
            android:layout_toRightOf="@id/icon_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_job_title"
                android:fontFamily="sans-serif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fix kitchen drawers, and install cupboard"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="9">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_currency_symbol" />

                    <TextView
                        android:id="@+id/card_job_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="050-250"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:fontFamily="sans-serif"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_scrue" />

                    <TextView
                        android:id="@+id/card_job_expertise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carpenter"
                        android:textSize="12dp"
                        android:maxLines="1"
                        android:fontFamily="sans-serif"
                        android:textColor="#333333" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_place" />

                    <TextView
                        android:id="@+id/card_job_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lahore"
                        android:maxLines="1"
                        android:textSize="12dp"
                        android:fontFamily="sans-serif"
                        android:textColor="#333333" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/arrow_lay"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:gravity="center"
            android:layout_height="30dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_right_arrow" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/yellow"
        />

</LinearLayout>