<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/cat_back">
        <RelativeLayout
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:background="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_centerVertical="true"
                android:id="@+id/icon_lay"
                android:layout_width="50dp"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/contact_photo_imageview"
                    app:civ_border_color="#FFC107"
                    app:civ_border_width="2dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/person_1" />

                <RelativeLayout
                    android:id="@+id/count_msg"
                    android:layout_marginRight="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/blue_circle"
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="7dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Some Name"
                    android:textColor="#333333"
                    android:fontFamily="sans-serif"
                    android:textSize="11sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_toLeftOf="@id/arrow_lay"
                android:layout_toRightOf="@id/icon_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contact_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Hani T."
                    android:textColor="#333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/job_title_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:text="Plumber need to fit new shower"
                    android:textColor="@color/blue_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/last_message_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:singleLine="true"
                    android:text="Have you been access the sitiuation"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/arrow_lay"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/chat_time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:45AM"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"
            />
</LinearLayout>