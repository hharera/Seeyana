<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMainBid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:visibility="visible"
    app:cardBackgroundColor="#4DA4CF"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitleBid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier=".6"
            android:padding="@dimen/_10sdp"
            android:text="Bid Proposal"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutBid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yellow" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/rect_background_places"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="8dp"
                                android:text="EGP"
                                android:textColor="#333333"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_12sdp"
                                android:background="#CFCECF" />


                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="@string/enter_your_cost_estimate"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:textColorHint="#696868"
                                android:textSize="@dimen/_12ssp" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="sans-serif"
                        android:text="Total bid amount is:    EGP 00    (with 10% fee)"
                        android:textColor="#333333"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/rect_background_places"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:hint="@string/describe_your_effort"
                        android:lineSpacingMultiplier=".6"
                        android:paddingLeft="@dimen/_8sdp"
                        android:singleLine="true"
                        android:textColorHint="#696868"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="24dp"
                        android:background="#F6F7F7"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="16dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="Promote your offer to beat your competition"
                            android:textColor="#4DA4CF"
                            android:textSize="@dimen/_14ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="16dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:text="Your offer will display among the top offers on the jobs pages for the chosen time duration"
                            android:textColor="#696868"
                            android:textSize="@dimen/_10ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:background="#CECBCE" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_featured" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:text="Feature Offer\nfor 1 Day"
                                    android:fontFamily="sans-serif"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/_12ssp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0"
                                android:paddingStart="@dimen/_8sdp"
                                android:paddingEnd="@dimen/_8sdp"
                                android:background="@drawable/rect_background_bid"
                                android:gravity="center">

                                <LinearLayout
                                    android:id="@+id/layoutGetFeatured"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/_4sdp"
                                        android:fontFamily="sans-serif"
                                        android:gravity="start"
                                        android:text="Only"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_8ssp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="-5dp"
                                        android:fontFamily="sans-serif"
                                        android:gravity="center"
                                        android:text="EGP  19.99"
                                        android:textColor="@android:color/white"
                                        android:textSize="@dimen/_12ssp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:background="#CECBCE" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutOfferAdded"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yellow" />

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/person_dum" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:lineSpacingMultiplier=".6"
                        android:text="Mabrouk!"
                        android:textColor="#E95C5C5C"
                        android:textSize="25sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:lineSpacingMultiplier=".6"
                        android:text="You have added your offer"
                        android:textColor="#E95C5C5C"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutFeatured"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/yellow" />

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/icon_featured" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:lineSpacingMultiplier=".6"
                        android:text="Mabrouk!"
                        android:textColor="#E95C5C5C"
                        android:textSize="25sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="-10dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:lineSpacingMultiplier=".6"
                        android:text="You offer is now featured for 1 day"
                        android:textColor="#E95C5C5C"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutBtnBid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@android:color/white"
                    android:gravity="bottom"
                    android:visibility="visible">

                    <Button
                        android:id="@+id/btnPlaceMyOffer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/yellow"
                        android:text="Place My Offer"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.cardview.widget.CardView>